{
  "packages": [
    "bau/**/*",
    "bau-css/**/*",
    "bau-router/**/*",
    "examples/**/*"
  ],
  "npmClient": "pnpm",
  "useWorkspaces": true,
  "version": "0.31.1",
  "command": {
    "command": {
      "bootstrap": {
        "npmClientArgs": [
          "--no-audit"
        ]
      }
    },
    "publish": {
      "create-release": "github",
      "conventional-commits": true
    },
    "run": {
      "ignore": []
    }
  }
}
